<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TodoAPP.Views.TodoListPage"
    Title="Todo">
    <ContentPage.ToolbarItems>
        <ToolbarItem Clicked="OnItemAdded" Text="+">
            <OnPlatform x:TypeArguments="ImageSource">
                <On Platform="Android,UWP" Value="plus.png" />
            </OnPlatform>
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <ListView x:Name="listView" Margin="20" ItemSelected="OnListItemSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Margin="20 0 0 0" HorizontalOptions="FillAndExpand" Orientation="Horizontal">
                        <Label HorizontalOptions="StartAndExpand" Text="{Binding Nome}"/>
                        <Image HorizontalOptions="End" IsVisible="{Binding Feito}" Source="check.png"/>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>