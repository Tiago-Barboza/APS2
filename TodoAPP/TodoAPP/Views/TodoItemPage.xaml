<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TodoAPP.Views.TodoItemPage"
    Title="{Binding Name}">            
  <ContentView.Content>
      <StackLayout Margin="20" Spacing="10" VerticalOptions="StartAndExpand">

            <Label Text="Nome"/>
            <Entry Text="{Binding Nome}"/>

            <Label Text="Notas"/>
            <Entry Text="{Binding Notas}"/>

            <StackLayout Orientation="Horizontal">
                <Label Margin="0,10" HorizontalOptions="StartAndExpand" Text="Feito"/>
                <Switch HorizontalOptions="EndAndExpand" IsToggled="{Binding Feito}"/>
            </StackLayout>

            <Button Clicked="SalvarClique" Text="Salvar"/>

            <Button Clicked="DeletarClique" Text="Salvar"/>

            <Button Clicked="CancelarClique" Text="Salvar"/>
        </StackLayout>
  </ContentView.Content>
</ContentPage>